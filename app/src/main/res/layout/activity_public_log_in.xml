<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.blog.PublicLogIn">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_gravity="center">




        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textfieldstyle"
            android:hint="Email"
            android:id="@+id/TextEmail"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
             />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textfieldstyle"
            android:hint="Password"
            android:inputType="textPassword"
            android:id="@+id/TextPassword"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
             />


        <Button
            style="@style/btnStyleClassic"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Log In"
            android:id="@+id/LogInButton"
            android:onClick="LogInButtononClicked"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/ForgotPasswordString"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="ForgotPasswordClicked" />

        <!--android:background="@drawable/login_signup_button"-->


    </LinearLayout>

</RelativeLayout>
