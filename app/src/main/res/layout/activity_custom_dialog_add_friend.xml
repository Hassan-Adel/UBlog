<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="355dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:background="@android:color/transparent"
    tools:context="com.example.pc.blog.PublicAddFriend">

<!--android:background="@android:color/transparent"-->

    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="160dp"
        android:background="@drawable/addfrienddialogcustombackgroung"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">
        <ImageButton
            android:layout_width="350dp"
            android:layout_height="36dp"
            android:id="@+id/AddFriend"
            android:padding="10dp"

            android:background="@drawable/addfriendbutton"
            android:onClick="AddFriendonClickedClicked"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/AddThisUser" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="User Name"
                    android:id="@+id/TextFriendName" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="User ID"
                    android:id="@+id/TextFriendId" />



            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>