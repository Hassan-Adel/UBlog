<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="355dp"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:background="@android:color/transparent"
    tools:context="com.example.pc.blog.PublicAddFriend">

<!--android:background="@android:color/transparent"-->

    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="110dp"
        android:background="@drawable/deletedialogbackground"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">
        <ImageButton
            android:layout_width="350dp"
            android:layout_height="36dp"
            android:id="@+id/DeleteFriendButton"
            android:padding="10dp"
            android:background="@drawable/deletefriendbuttonbackground"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Are you sure you want to delete "
                android:id="@+id/TextDeleteFriendDialog"
                android:layout_above="@+id/AddFriend"
                android:layout_centerHorizontal="true"

                android:gravity="center_horizontal" />
        </LinearLayout>


    </RelativeLayout>



</LinearLayout>

