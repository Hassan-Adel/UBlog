<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/FriendImage" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Friend Name"
                    android:id="@+id/TextFriendName" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Friend ID"
                    android:id="@+id/TextFriendId" />



            </LinearLayout>

            <Button
                style="@style/btnStyleSharpRed"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Delete"
                android:id="@+id/DeleteFriendButton"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"

                android:layout_margin="4dp" />
<!--android:onClick="DeleteFriendButtonClicked"android:onClick="ReportFriendButtonClicked"-->
            <Button
                style="@style/btnStyleSharpGreen"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Report"
                android:id="@+id/ReportFriendButton"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/DeleteFriendButton"
                android:layout_toStartOf="@+id/DeleteFriendButton"

                android:layout_margin="4dp" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>